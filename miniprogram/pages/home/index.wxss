.container {
  background: rgb(237, 230, 220);
  fill: rgb(237, 230, 220)
}



.header, .teacher, .bg {
  display: block;
  width: 100%;
}

.header .header-bg {
  border-radius: 1rem;
  margin-top: 0.5rem;
}

.header .title {
  display: flex;
  justify-content: center;
  margin-top: -12rem;
}

.header .sub-title {
  margin-top: 3.2rem;
  overflow: hidden;
  text-emphasis: wrap;
  display: flex;
  justify-content: space-around
}

.header .sub-title .item {
  display: inline-flex;
  width: 15px;
}

.teacher-title {
  margin-top: 4rem;
  font-size: 1.5rem;
}

.teacher {
  background-image: url('../../images/boss.png');
  margin-top: 2rem;
  border-radius: 1rem;
  position: relative;
}
.teacher .teacher-desc {
  display: inline-flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center
}
.teacher .teacher-desc p{
  display: block;
}
